<manifest package="com.zenelk.t9"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application android:allowBackup="true"
                 android:icon="@mipmap/ic_launcher"
                 android:label="@string/app_name"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.zenelk.t9.T9Keyboard"
                 android:label="@string/zenels_ime"
                 android:permission="android.permission.BIND_INPUT_METHOD">
            <meta-data android:name="android.view.im" android:resource="@xml/method"/>
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
        </service>
        <service android:name=".TranslationService"
                 android:label="@string/translation_service_name">
            <intent-filter>
                <action android:name="com.zenelk.t9.Translate" />
            </intent-filter>
        </service>

    </application>

</manifest>
